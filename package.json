{
	"name": "langextractor",
	"displayName": "LangExtractor",
	"description": "Allows to easily extract lang variables in php",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.30.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:extension.langExtract"
	],
	"main": "./out/extension.js",
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "LangExtract",
			"properties": {
				"langExtract.langFile": {
					"type": "string",
					"default": "lang/lang_en.php",
					"scope": "resource",
					"description": "Relative lang file name"
				}
			}
		},
		"commands": [
			{
				"command": "extension.langExtract",
				"title": "Extract lang resource"
			}
		],
		"menus": {
			"editor/context": [{
				"when": "resourceLangId == php && editorHasSelection",
				"command": "extension.langExtract",
				"group": "navigation"
		  	}]
		}		
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "npm run compile && node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"typescript": "^3.3.1",
		"vscode": "^1.1.28",
		"tslint": "^5.12.1",
		"@types/node": "^8.10.25",
		"@types/mocha": "^2.2.42"
	}
}
